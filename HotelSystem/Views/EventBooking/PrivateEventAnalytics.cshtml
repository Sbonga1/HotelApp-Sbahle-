@model HotelSystem.ViewModels.PrivateEventAnalyticsViewModel
@{
    ViewBag.Title = "Private Event Analytics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
<div style="padding-top:5%"></div>

<div class="container py-5">
    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="fa fa-chart-pie me-2"></i> Private Event Analytics</h3>
            <span class="badge bg-white text-dark px-3 py-2 rounded-pill">
                @Model.EventTitle
            </span>
        </div>

        <div class="card-body px-4 py-4">
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="border rounded-3 p-3 text-center shadow-sm">
                        <h5 class="fw-bold text-primary"><i class="fa fa-paper-plane me-2"></i> Invites Sent</h5>
                        <p class="display-6">@Model.InvitesSent</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="border rounded-3 p-3 text-center shadow-sm">
                        <h5 class="fw-bold text-success"><i class="fa fa-check-circle me-2"></i> Confirmed (Yes)</h5>
                        <p class="display-6">@Model.ResponsesYes</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="border rounded-3 p-3 text-center shadow-sm">
                        <h5 class="fw-bold text-danger"><i class="fa fa-times-circle me-2"></i> Declined (No)</h5>
                        <p class="display-6">@Model.ResponsesNo</p>
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="border rounded-3 p-3 text-center shadow-sm">
                        <h5 class="fw-bold text-warning"><i class="fa fa-question-circle me-2"></i> No Response</h5>
                        <p class="display-6">@Model.NoResponse</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="border rounded-3 p-3 text-center shadow-sm">
                        <h5 class="fw-bold text-dark"><i class="fa fa-user-check me-2"></i> Attended</h5>
                        <p class="display-6">@Model.Attended</p>
                    </div>
                </div>
            </div>

            <div class="text-end mt-4">
                <a href="@Url.Action("Details", "EventBooking", new { id = ViewBag.EventBookingId })" class="btn btn-secondary px-4">
                    <i class="fa fa-arrow-left me-1"></i> Back to Booking
                </a>
            </div>
        </div>
    </div>
</div>
