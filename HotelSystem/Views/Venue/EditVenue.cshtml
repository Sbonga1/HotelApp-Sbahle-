@model HotelSystem.Models.Venue
@{
    ViewBag.Title = "Edit Venue";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    .image-preview {
        max-height: 200px;
        border-radius: 10px;
        border: 1px solid #ddd;
        margin-top: 10px;
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }
</style>
<div style="padding-top:5%"></div>

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-info text-white rounded-top-4">
            <h3 class="mb-0"><i class="fa fa-edit me-2"></i> Edit Venue</h3>
        </div>

        <div class="card-body px-4 py-5">
            @using (Html.BeginForm("EditVenue", "Venue", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.VenueId)

                <div class="mb-3">
                    @Html.LabelFor(m => m.Name, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Venue name..." })
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.Capacity, new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(m => m.Capacity, new { @class = "form-control", type = "number", placeholder = "e.g. 100" })
                    </div>
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.BaseRatePerHour, "Hourly Rate", new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(m => m.BaseRatePerHour, new { @class = "form-control", type = "number", step = "0.01", placeholder = "e.g. 250.00" })
                    </div>
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Description, new { @class = "form-label fw-bold" })
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "4", placeholder = "Enter venue description..." })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Upload New Venue Image (optional)</label>
                    <input type="file" name="ImageFile" id="ImageFile" class="form-control" accept="image/*" onchange="previewImage(this);" />
                </div>

                if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mb-3">
                        <label class="form-label fw-bold">Current Image:</label><br />
                        <img src="@Url.Content(Model.ImageUrl)" class="image-preview" />
                    </div>
                }

                <div>
                    <label class="form-label fw-bold">New Preview:</label><br />
                    <img id="preview" class="image-preview" style="display:none;" />
                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fa fa-save me-1"></i> Update Venue
                    </button>
                    <a href="@Url.Action("Venues")" class="btn btn-secondary px-4">Cancel</a>
                </div>
            }
        </div>
    </div>
</div>

<script>
    function previewImage(input) {
        var preview = document.getElementById('preview');
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                preview.style.display = 'block';
                preview.src = e.target.result;
            };
            reader.readAsDataURL(input.files[0]);
        } else {
            preview.style.display = 'none';
        }
    }
</script>
