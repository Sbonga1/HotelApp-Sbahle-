@model IEnumerable<HotelSystem.Models.EventTable>
@{
    ViewBag.Title = "Manage Tables";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    .table-card {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(6px);
        border-radius: 1rem;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 4px 18px rgba(0, 0, 0, 0.1);
    }

        .table-card:hover {
            transform: scale(1.025);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

    .table-image {
        height: 180px;
        width: 100%;
        object-fit: cover;
        border-bottom: 1px solid #e0e0e0;
    }

    .btn-group-wrap {
        gap: 0.4rem;
    }

    .card-title i {
        color: #0d6efd;
    }
</style>

<div style="padding-top:5%"></div>
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="fa fa-chair me-2"></i> Tables for Venue: @ViewBag.VenueName</h2>
        <a href="@Url.Action("Create", "EventTables", new { venueId = ViewBag.VenueId })" class="btn btn-success shadow-sm">
            <i class="fa fa-plus-circle me-1"></i> Add Table
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            <i class="fa fa-info-circle me-2"></i> No tables have been added for this venue yet.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var table in Model)
            {
                var imgSrc = !string.IsNullOrEmpty(table.ImageUrl)
                    ? Url.Content(table.ImageUrl)
                    : Url.Content("~/Content/images/table-default.jpg");

                <div class="col-md-4 mb-4">
                    <div class="card table-card h-100 shadow">
                        <img src="@imgSrc" alt="Table Image" class="table-image" />

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold mb-1">
                                <i class="fa fa-table me-2"></i>@table.TableName
                            </h5>
                            <p class="text-muted mb-3"><i class="fa fa-hashtag me-1"></i> ID: @table.EventTableId</p>

                            <div class="mt-auto d-flex flex-wrap btn-group-wrap">
                                <a href="@Url.Action("Edit", new { id = table.EventTableId })" class="btn btn-sm btn-outline-primary">
                                    <i class="fa fa-edit me-1"></i> Edit
                                </a>
                                <a href="@Url.Action("Delete", new { id = table.EventTableId })" class="btn btn-sm btn-outline-danger">
                                    <i class="fa fa-trash me-1"></i> Delete
                                </a>
                                <a href="@Url.Action("Index", "Seats", new { tableId = table.EventTableId})" class="btn btn-sm btn-outline-dark">
                                    <i class="fa fa-th-list me-1"></i> Manage Seats
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
