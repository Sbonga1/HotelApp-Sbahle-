@using HotelSystem.Models
@model Apartment

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create Apartment";
}

<script src="~/Scripts/jquery-1.7.1.min.js"></script>
<script type="text/javascript">
    function show(input) {
        if (input.files && input.files[0]) {
            var filerdr = new FileReader();
            filerdr.onload = function (e) {
                $('#user_img').attr('src', e.target.result);
            }
            filerdr.readAsDataURL(input.files[0]);
        }
    }
</script>

<div class="container mt-5" style="padding-top:5%">
    <div class="card shadow-lg p-4 animate-fade-in rounded-4">
        <h2 class="fw-bold mb-4">Add Apartment</h2>

        @using (Html.BeginForm("Create", "Apartments", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="mb-3">
                @Html.LabelFor(model => model.Room, "Room Number", htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Room, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Room, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label class="form-label">Room Type</label>
                <select name="RoomType" id="roomType" class="form-control">
                    <option value="Business Class">Business Class</option>
                    <option value="Double Room">Double Room</option>
                    <option value="Standard Room">Standard Room</option>
                    <option value="Classic Room">Classic Room</option>
                    <option value="Honeymoon Suite">Honeymoon Suite</option>
                    <option value="King Suite">King Suite</option>
                    <option value="Superior Single Room">Superior Single Room</option>
                    <option value="Family Room">Family Room</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Number Of Guests</label>
                <select name="Capacity" id="guest" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                </select>
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.floor, "Floor Number", htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.floor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.floor, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.description, "Room Description", htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.rating, "Price", htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.rating, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.rating, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label class="form-label">Room Image</label>
                <div class="mb-2">
                    <img id="user_img" height="200" width="350" class="border rounded" alt="Image Preview" />
                </div>
                <input type="file" title="Choose image" id="file" name="file" onchange="show(this)" class="form-control" required />
            </div>

            <div class="mb-4" style="display:none">
                <label class="form-label">Status</label>
                <select name="Status" id="status" class="form-control">
                    <option value="Available">Received, Pending Payment</option>
                </select>
            </div>

            <div class="d-flex justify-content-between">
                <a class="btn btn-outline-secondary" href="@Request.UrlReferrer">Back</a>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
