@model HotelSystem.Models.Activity
@{
    ViewBag.Title = "Edit Activity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    .image-preview {
        max-height: 150px;
        margin-top: 10px;
        border: 1px dashed #ccc;
        border-radius: 10px;
        padding: 5px;
    }
</style>
<div style="padding-top:5%"></div>

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-info text-white rounded-top-4">
            <h3 class="mb-0"><i class="fa fa-edit me-2"></i> Edit Activity</h3>
        </div>

        <div class="card-body px-4 py-5">
            @using (Html.BeginForm("Edit", "Activities", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ActivityId)

                <div class="mb-3">
                    <label class="form-label fw-bold"><i class="fa fa-signature me-1"></i> Activity Name</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "e.g. Live Band" })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold"><i class="fa fa-clock me-1"></i> Hourly Rate</label>
                    @Html.TextBoxFor(m => m.PricePerHour, new { @class = "form-control", type = "number", step = "0.01", placeholder = "e.g. 80.00" })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold"><i class="fa fa-image me-1"></i> Upload New Icon Image</label>
                    <input type="file" name="IconImageFile" id="IconImageFile" class="form-control" accept="image/*" onchange="previewIcon(this)" />
                </div>

                if (!string.IsNullOrEmpty(Model.IconImageUrl))
                {
                    <div class="mb-3">
                        <label class="form-label fw-bold">Current Icon Image:</label><br />
                        <img src="@Url.Content(Model.IconImageUrl)" class="image-preview" />
                    </div>
                }

                <div class="mb-3">
                    <label class="form-label fw-bold">New Image Preview:</label><br />
                    <img id="iconPreview" class="image-preview" style="display:none;" />
                </div>



                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fa fa-save me-1"></i> Update Activity
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary px-4">
                        <i class="fa fa-arrow-left me-1"></i> Cancel
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<script>
    function previewIcon(input) {
        const preview = document.getElementById('iconPreview');
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                preview.style.display = 'block';
                preview.src = e.target.result;
            };
            reader.readAsDataURL(input.files[0]);
        } else {
            preview.style.display = 'none';
        }
    }
</script>
