@model IEnumerable<HotelSystem.Models.Resturant>
@{
    ViewBag.Title = "Restaurants";
    string imagePath = Url.Content("~/assets/images/");
}

<div class="container py-4">
    <h2 class="mb-4 text-center">Restaurants</h2>

    @if (User.IsInRole("Admin"))
    {
        <div class="mb-4 text-right">
            <a href="@Url.Action("Create", "Resturants")" class="btn btn-success">
                <i class="fa fa-plus"></i> Create New Restaurant
            </a>
        </div>
    }

    <div class="row">
        @foreach (var item in Model)
        {
            var link = User.IsInRole("Admin")
                ? Url.Action("Index", "TableReservations", new { id = item.Id })
                : Url.Action("Index", "TableCategories", new { id = item.Id });

            <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
                <a href="@link" class="text-decoration-none text-dark">
                    <div class="card h-100 shadow-sm">
                        <img src="@($"{imagePath}{item.Icon}")" class="card-img-top img-fluid" style="height: 180px; object-fit: cover;" alt="@item.Name" />
                        <div class="card-body text-center">
                            <h5 class="card-title font-weight-bold">@item.Name</h5>
                            <div class="text-warning">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star-o"></i>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
