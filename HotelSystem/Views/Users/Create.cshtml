@using HotelSystem.Models.UserProfiles
@model User

@{
    ViewBag.Title = "Create User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Cabin:600,700|Lato:300,400" rel="stylesheet">
    <script src="https://use.fontawesome.com/086e19824e.js"></script>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .myLinks {
            color: white;
            font-size: 18px;
        }

        .form-group input[type=text], .form-group input[type=password], .form-group input[type=datetime], .form-group input[type=number] {
            height: 40px;
            width: 100% !important;
            background-color: #ededed;
            border: none;
            border-radius: 1px;
            box-shadow: none;
        }


        .form-group input[type=submit] {
            background-color: #2ecc71;
            color: white;
            border: none;
            border-radius: 0px;
            box-shadow: none;
            width: 100%;
            height: 40px;
            text-transform: uppercase;
        }

            .form-group input[type=submit]:hover, .form-group input[type=submit]:focus {
                opacity: 0.9;
            }

        #register-sec {
            padding: 60px 0;
        }

            #register-sec h2 {
                color: #e74c3c;
            }

            #register-sec .img-cont {
                height: 400px;
                overflow: hidden;
            }

        #login-sec {
            padding: 20px 0;
        }

            #login-sec h2 {
                color: #e74c3c;
            }

            #login-sec .img-cont {
                height: 400px;
                overflow: hidden;
            }

        .left-part {
            float: left;
            width: 40%;
            height: 500px;
        }

        .right-img {
            float: right;
            width: 50%;
            height: 400px;
            background-image: url('/Content/img/hotel.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            border: 0px solid firebrick;
            border-radius: 5px;
        }

        .space {
            height: 50px;
        }

        .alert-danger {
            margin-left: 20px;
            font-size: 15px;
            height: 50px;
            border-radius: 5px;
        }

            .alert-danger p {
                margin-left: 20px;
                padding-top: 15px;
                font-size: 14px;
            }

        .col-md-10 {
            margin-left: 50px;
        }

        .space-l {
            height: 10px;
        }

        .hr {
            color: brown;
        }
    </style>

</head>
<body>
    <div id="login-sec">

        <div class="container">
            <div class="row">

                <div class="left-part col-md-6">
                    <h2>@ViewBag.Title</h2>

                    <section id="loginForm">
                        @using (Html.BeginForm("Create", "Users", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()

                            if (TempData.ContainsKey("UserCreationSuccess"))
                            {
                                <div class="alert alert-success" id="notification">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    @TempData["UserCreationSuccess"]
                                </div>
                            }
                            else if (TempData.ContainsKey("UserCreationError"))
                            {
                                <div class="alert alert-success" id="notification">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    @TempData["UserCreationError"]
                                </div>
                            }
                            <hr class="hr" />



                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="col-md-10">
                                    <p>Email</p>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <p>Role</p>
                                    @Html.DropDownListFor(m => m.Role,
                                   new SelectList(Enum.GetValues(typeof(RoleEnum))),
                                   "Select Role",new { @class = "form-control" })
                                </div>
                            </div>
                           
                            <div class="form-group">
                                <div class="col-md-10">
                                    <p>Name</p>
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <p>Password</p>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <input type="submit" value="Add User" class="btn btn-default" />
                                </div>
                            </div>


                        }
                    </section>
                </div>

                <div class="space"></div>
                <div class="right-img col-md-6">
                </div>
            </div>
        </div>

    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>
