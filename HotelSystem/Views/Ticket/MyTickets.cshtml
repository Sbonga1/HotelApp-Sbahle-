@model IEnumerable<HotelSystem.Models.Ticket>
@{
    ViewBag.Title = "My Tickets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
<div style="padding-top:5%"></div>
<div class="container py-5">
    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fa fa-ticket-alt me-2"></i> My Event Tickets</h3>
        </div>

        <div class="card-body px-4 py-4">
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="fa fa-info-circle me-1"></i> You have not purchased any event tickets yet.
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var ticket in Model)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card border-0 shadow-sm rounded-4 h-100">
                                <div class="card-body">
                                    <h5 class="card-title fw-bold text-primary">
                                        <i class="fa fa-ticket me-1"></i> Ticket Code: @ticket.TicketCode
                                    </h5>

                                    <p><i class="fa fa-ticket me-1"></i> Ticket Type: <strong>@ticket.TicketType</strong></p>
                                    <p><i class="fa fa-users me-1"></i> Quantity: <strong>@(ticket.Quantity ?? 1)</strong></p>
                                    <p><i class="fa fa-money-bill me-1"></i> Paid: <strong>@ticket.AmountPaid.ToString("R 0.00")</strong></p>
                                    <p><i class="fa fa-calendar-alt me-1"></i> Purchased: @ticket.PurchaseDate.ToString("f")</p>

                                    @if (!string.IsNullOrEmpty(ticket.QRCodeImagePath))
                                    {
                                        <img src="@Url.Content(ticket.QRCodeImagePath)" alt="QR Code" class="img-fluid mt-3" style="max-height: 120px;" />
                                    }

                                    <a href="@Url.Action("DownloadTicket", "Ticket", new { id = ticket.TicketId })" class="btn btn-sm btn-outline-primary mt-3">
                                        <i class="fa fa-download me-1"></i> Download PDF
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
