@model HotelSystem.ViewModels.EnterBuyerInfoViewModel
@{
    ViewBag.Title = "Enter Buyer Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
<div style="padding-top:5%"></div>
<div class="container py-5">
    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fa fa-user me-2"></i> Buyer Information</h3>
        </div>
        <div class="card-body px-4 py-4">
            @using (Html.BeginForm("ConfirmBuyerInfo", "Ticket", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.EventBookingId)
                @Html.HiddenFor(m => m.SelectedTicketTypeId)
                @Html.HiddenFor(m => m.Quantity)
                @Html.HiddenFor(m => m.PricePerTicket)
                @Html.HiddenFor(m => m.TicketTypeName)

                <div class="mb-3">
                    <label class="form-label fw-bold">Full Name</label>
                    @Html.TextBoxFor(m => m.BuyerName, new { @class = "form-control", placeholder = "Enter your full name" })
                    @Html.ValidationMessageFor(m => m.BuyerName, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Email Address</label>
                    @Html.TextBoxFor(m => m.BuyerEmail, new { @class = "form-control", placeholder = "Enter your email" })
                    @Html.ValidationMessageFor(m => m.BuyerEmail, "", new { @class = "text-danger" })
                </div>

                <div class="alert alert-info mt-4">
                    <p><strong>Ticket Type:</strong> @Model.TicketTypeName</p>
                    <p><strong>Quantity:</strong> @Model.Quantity</p>
                    <p><strong>Price Per Ticket:</strong> @Model.PricePerTicket.ToString("R 0.00")</p>
                    <p><strong>Total:</strong> @Model.TotalAmount.ToString("R 0.00")</p>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fa fa-arrow-right me-1"></i> Proceed to Payment
                    </button>
                </div>
            }
        </div>
    </div>
</div>
