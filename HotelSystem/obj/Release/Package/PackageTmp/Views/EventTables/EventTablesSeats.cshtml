@model IEnumerable<HotelSystem.Models.Seat>
@{
    ViewBag.Title = "Event Table Seats";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var tableName = ViewBag.TableName;
    var tableId = ViewBag.TableId;
    var eventId = ViewBag.EventId;
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fa fa-chair me-2"></i> Table: @tableName (ID: @tableId)</h4>
            <div>
                <a href="@Url.Action("TablesForEvent", "EventTables", new { eventId = eventId })" class="btn btn-sm btn-light">
                    <i class="fa fa-arrow-left me-1"></i> Back to Event Tables
                </a>
                @if (User.IsInRole("Admin"))
                {
                    <form action="@Url.Action("ClearAllSeats", "EventTables")" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to unassign all guests from this table?');">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="tableId" value="@tableId" />
                        <input type="hidden" name="eventId" value="@eventId" />
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="fa fa-user-slash me-1"></i> Remove All Guests
                        </button>
                    </form>
                }
            </div>
        </div>
     
        <div class="card-body">
            <div class="mb-4">
                <span class="badge bg-secondary">
                    <i class="fa fa-calendar-alt me-1"></i> Event ID: @eventId
                </span>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="fa fa-info-circle me-1"></i> No seats have been created for this table yet.
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var seat in Model)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card border-0 shadow-sm rounded-4 h-100">
                                <div class="card-body">
                                    <h5 class="card-title fw-bold">Seat @seat.SeatNumber</h5>
                                    @if (seat.IsOccupied)
                                    {
                                        <p><strong>👤 Occupied By:</strong> @seat.OccupiedByEmail</p>
                                        <p><strong>⏱️ Assigned:</strong> @(seat.AssignedAt?.ToString("f"))</p>
                                    }
                                    else
                                    {
                                        <div class="alert alert-warning text-center mb-0">
                                            <i class="fa fa-exclamation-circle me-1"></i> Seat Available
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
