@model HotelSystem.Models.Reservation

@{
    ViewBag.Title = "Make Reservation";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var today = DateTime.Now.ToString("yyyy-MM-dd");
    var nowTime = DateTime.Now.ToString("HH:mm");
}

<!-- Flatpickr CSS -->
<link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet" />

<div class="container mt-5" style="padding-top:5%">
    <div class="card shadow-lg p-4 animate-fade-in rounded-4">
        <h2 class="fw-bold mb-4 text-center text-primary">
            <i class="fa fa-calendar-check-o"></i> Book Your Stay
        </h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            if (ViewBag.ErrorDate != null)
            {
                <div class="alert alert-danger">@ViewBag.ErrorDate</div>
            }

            if (ViewBag.ErrorTime != null)
            {
                <div class="alert alert-danger">@ViewBag.ErrorTime</div>
            }

            if (!string.IsNullOrEmpty(ViewBag.PromoError as string))
            {
                <div class="alert alert-warning">@ViewBag.PromoError</div>
            }

            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">First Name</label>
                    @Html.EditorFor(m => m.CustomerName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Last Name</label>
                    @Html.EditorFor(m => m.CustomerSurname, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>

                <div class="col-md-12 mb-3">
                    <label class="form-label">Email Address</label>
                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Check-In Date</label>
                    @Html.TextBoxFor(m => m.From, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", @Value = today })
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Arrival Time</label>
                    @Html.TextBoxFor(m => m.Time, "{0:HH:mm}", new { @class = "form-control", type = "time", min = "07:00", max = "23:00", @Value = nowTime, id = "arrivalTime" })
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Night(s)</label>
                    @Html.EditorFor(m => m.Nights, new { htmlAttributes = new { @class = "form-control", type = "number", min = "1" } })
                </div>

                <div class="col-md-12 mb-3">
                    <div class="form-check">
                        <input type="checkbox" id="togglePromo" class="form-check-input" />
                        <label class="form-check-label" for="togglePromo">I have a promo code</label>
                    </div>
                </div>

                <div class="col-md-6 mb-3" id="promoCodeSection" style="display:none;">
                    <label class="form-label">Promo Code</label>
                    <input type="text" name="PromoCode" class="form-control" placeholder="Enter promo code" />
                </div>
            </div>

            <div class="text-end">
                <input type="submit" value="PROCEED" class="btn btn-primary px-4 py-2 fw-bold" />
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <script>
        $(document).ready(function () {
            $('#togglePromo').change(function () {
                $('#promoCodeSection').toggle(this.checked);
            });

            flatpickr("#arrivalTime", {
                enableTime: true,
                noCalendar: true,
                dateFormat: "H:i",
                time_24hr: true,
                minTime: "07:00",
                maxTime: "23:00",
                defaultDate: new Date()
            });
        });
    </script>
}
