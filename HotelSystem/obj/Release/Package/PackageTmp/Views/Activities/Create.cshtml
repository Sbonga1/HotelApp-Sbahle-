@model HotelSystem.Models.Activity
@{
    ViewBag.Title = "Add New Activity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    .image-preview {
        max-height: 150px;
        margin-top: 10px;
        border: 1px dashed #ccc;
        border-radius: 10px;
        padding: 5px;
        display: none;
    }
</style>
<div style="padding-top:5%"></div>

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-success text-white rounded-top-4">
            <h3 class="mb-0"><i class="fa fa-plus-circle me-2"></i> Add New Activity</h3>
        </div>

        <div class="card-body px-4 py-5">
            @using (Html.BeginForm("Create", "Activities", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label fw-bold"><i class="fa fa-signature me-1"></i> Activity Name</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "e.g. Bowling" })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold"><i class="fa fa-clock me-1"></i>  Price Per Guest</label>
                    @Html.TextBoxFor(m => m.PricePerGuest, new { @class = "form-control", type = "number", step = "0.01", placeholder = "e.g. 120.00" })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold"><i class="fa fa-image me-1"></i> Upload Icon Image</label>
                    <input type="file" name="IconImageFile" id="IconImageFile" class="form-control" accept="image/*" onchange="previewIcon(this)" />
                    <img id="iconPreview" class="image-preview mt-2" />
                </div>



                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fa fa-check-circle me-1"></i> Save Activity
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary px-4">
                        <i class="fa fa-arrow-left me-1"></i> Cancel
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<script>
    function previewIcon(input) {
        const preview = document.getElementById('iconPreview');
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                preview.style.display = 'block';
                preview.src = e.target.result;
            };
            reader.readAsDataURL(input.files[0]);
        } else {
            preview.style.display = 'none';
        }
    }
</script>
