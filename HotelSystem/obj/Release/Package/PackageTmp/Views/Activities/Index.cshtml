@model IEnumerable<HotelSystem.Models.Activity>
@{
    ViewBag.Title = "Manage Activities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    .activity-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .activity-card:hover {
            transform: scale(1.01);
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.12);
        }

    .activity-icon {
        max-height: 150px;
        object-fit: cover;
        border-radius: 0.75rem 0.75rem 0 0;
    }
</style>
<div style="padding-top:5%"></div>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold"><i class="fa fa-puzzle-piece me-2"></i> Manage Activities</h2>
        <a href="@Url.Action("Create")" class="btn btn-success">
            <i class="fa fa-plus-circle me-1"></i> Add New Activity
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            <i class="fa fa-exclamation-circle me-1"></i> No activities available.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var a in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card activity-card shadow-sm border-0 rounded-4">
                        @if (!string.IsNullOrEmpty(a.IconImageUrl))
                        {
                            <img src="@Url.Content(a.IconImageUrl)" alt="@a.Name" class="activity-icon w-100" />
                        }

                        <div class="card-body">
                            <h5 class="card-title fw-bold">@a.Name</h5>
                            <p><i class="fa fa-clock me-1 text-success"></i> Price Per Guest: @a.PricePerGuest.ToString("R 0.00")</p>


                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("Edit", new { id = a.ActivityId })" class="btn btn-sm btn-outline-primary">
                                    <i class="fa fa-edit me-1"></i> Edit
                                </a>
                                <a href="@Url.Action("Delete", new { id = a.ActivityId })" class="btn btn-sm btn-outline-danger">
                                    <i class="fa fa-trash me-1"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
