@model IEnumerable<HotelSystem.Models.Complaint>


@{
   
    ViewBag.Title = "All Complaints";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container py-5">
    <h2 class="mb-4 text-center fw-bold">
        <i class="fa fa-exclamation-triangle"></i> All Customer Complaints
    </h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">No complaints have been submitted yet.</div>
    }
    else
    {
        foreach (var complaint in Model)
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                    <span>
                        Complaint #@complaint.Id - <strong>@complaint.CustomerEmail</strong> - Order #@complaint.CustomerOrderId
                    </span>
                    <span>
                        Status:
                        <span class="badge @(complaint.Status == "Approved" ? "bg-success" : complaint.Status == "Declined" ? "bg-danger" : "bg-warning text-dark")">
                            @(complaint.Status ?? "Pending")
                        </span>
                    </span>
                </div>

                <div class="card-body">
                    <p><strong>Submitted:</strong> @complaint.SubmittedAt.ToString("f")</p>
                    <p><strong>Description:</strong> @complaint.Description</p>

                    <h6>Complained Items:</h6>
                    <ul>
                        @foreach (var item in complaint.ComplaintItems)
                        {
                            
                            <li>@(item.OrderedProduct?.Product?.Name?? "Unknown Product") - qty @(item.OrderedProduct?.Quantity)</li>
                        }
                    </ul>

                    @if (complaint.Status == null)
                    {
                        <div class="mt-3">
                            @using (Html.BeginForm("ReviewComplaint", "Complaint", FormMethod.Post, new { @class = "d-inline" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("complaintId", complaint.Id)
                                @Html.Hidden("action", "Approved")
                                <button type="submit" class="btn btn-success me-2">
                                    <i class="fa fa-check"></i> Approve
                                </button>
                            }

                            <!-- Decline Modal Trigger -->
                            <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#declineModal-@complaint.Id">
                                <i class="fa fa-times"></i> Decline
                            </button>

                            <!-- Modal for Declining -->
                            <div class="modal fade" id="declineModal-@complaint.Id" tabindex="-1" aria-labelledby="declineLabel-@complaint.Id" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        @using (Html.BeginForm("ReviewComplaint", "Complaint", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="declineLabel-@complaint.Id">Decline Complaint #@complaint.Id</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                @Html.Hidden("complaintId", complaint.Id)
                                                @Html.Hidden("action", "Declined")
                                                <div class="form-group">
                                                    <label for="AdminResponse">Reason for Declining:</label>
                                                    <textarea name="AdminResponse" class="form-control" rows="4" required></textarea>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-danger">Submit</button>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="mt-3">
                            <p><strong>Admin Response:</strong> @complaint.AdminResponse</p>
                            <p><strong>Reviewed:</strong> @(complaint.ReviewedAt?.ToString("f"))</p>
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>
