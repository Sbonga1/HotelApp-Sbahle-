@model IEnumerable<HotelSystem.ViewModels.WaiterEventTableGroup>

@{
    ViewBag.Title = "🍽️ My Assigned Event Tables";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="padding-top:5%"></div>

<div class="container py-4">
    <h2 class="fw-bold mb-4"><i class="fa fa-chair me-2"></i> My Assigned Event Tables</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="fa fa-info-circle me-1"></i> You are not assigned to any event tables.
        </div>
    }
    else
    {
        foreach (var group in Model)
        {
            <div class="card shadow-sm border-0 rounded-4 mb-5">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0" style="color:white">
                        📅 Event #@group.EventBooking.EventBookingId —
                        <span class="fw-normal"> @group.EventBooking.EventQuote.Venue.Name</span>
                    </h5>
                    <small><i class="fa fa-calendar-alt me-1"></i> @group.EventBooking.EventQuote.EventStartDateTime.ToString("f")</small>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var table in group.Tables)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card shadow-sm border-0 rounded-4 h-100">
                                    <div class="card-header bg-primary text-white">
                                        <h5 class="mb-0">@table.TableName</h5>
                                        <small class="text-white">📍 Venue: @table.Venue.Name</small>
                                    </div>
                                    <div class="card-body">
                                        <p><i class="fa fa-users me-1 text-muted"></i> <strong>Total Seats:</strong> @(table.Seats?.Count ?? 0)</p>

                                        <h6 class="mt-3 fw-bold"><i class="fa fa-user-check me-1 text-success"></i> Occupied Seats</h6>

                                        @if (table.Seats.Any(s => s.IsOccupied))
                                        {
                                            <ul class="list-group list-group-flush">
                                                @foreach (var seat in table.Seats.Where(s => s.IsOccupied))
                                                {
                                                    var served = seat.ServedAt.HasValue;

                                                    <li class="list-group-item">
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <div>
                                                                <i class="fa fa-user me-1 text-secondary"></i>
                                                                <strong>@seat.OccupiedByEmail</strong>
                                                                <span class="badge bg-secondary ms-2">Seat @seat.SeatNumber</span>
                                                            </div>
                                                            @if (!served)
                                                            {
                                                                <a href="@Url.Action("ServeGuest", "Waiter", new { seatId = seat.SeatId })" class="btn btn-sm btn-success">
                                                                    <i class="fa fa-check-circle me-1"></i> Serve
                                                                </a>
                                                            }
                                                        </div>

                                                        @if (served)
                                                        {
                                                            <div class="text-muted mt-1 ms-4">
                                                                <i class="fa fa-clock me-1"></i> Served at: @(seat.ServedAt?.ToString("f"))
                                                            </div>
                                                        }
                                                    </li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <div class="alert alert-warning text-center mt-2">
                                                <i class="fa fa-exclamation-circle me-1"></i> No guests seated yet.
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>
