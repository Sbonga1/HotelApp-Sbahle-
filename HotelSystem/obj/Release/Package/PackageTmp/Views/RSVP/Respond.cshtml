@model HotelSystem.ViewModels.RSVPViewModel
@{
    ViewBag.Title = "RSVP for Event";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0"><i class="fa fa-envelope-open-text me-2"></i> RSVP - @Model.EventTitle</h3>
        </div>
        <div class="card-body px-4 py-4">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.RSVPToken)

                <p><strong>Event:</strong> @Model.EventTitle</p>
                <p><strong>Date:</strong> @Model.EventDate.ToString("f")</p>
                <p><strong>Venue:</strong> @Model.VenueName</p>
                <p>@Model.Description</p>

                <div class="form-group mt-4">
                    <label class="fw-bold">Your Response:</label>
                    @Html.DropDownListFor(m => m.Response, new SelectList(new[] { "Accept", "Decline" }), "-- Select Response --", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Response, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-primary mt-3">
                    <i class="fa fa-check-circle me-1"></i> Submit RSVP
                </button>
            }
        </div>
    </div>
</div>
