@model HotelSystem.Models.Equipment
@{
    ViewBag.Title = "Add Equipment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    .image-preview {
        max-height: 150px;
        display: none;
        border: 1px dashed #ccc;
        border-radius: 10px;
        margin-top: 10px;
    }
</style>
<div style="padding-top:5%"></div>

<div class="container py-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-success text-white rounded-top-4">
            <h3><i class="fa fa-plus-circle me-2"></i> Add Equipment</h3>
        </div>

        <div class="card-body px-4 py-5">
            @using (Html.BeginForm("Create", "Equipment", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    @Html.LabelFor(m => m.Name, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.QuantityAvailable, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.QuantityAvailable, new { @class = "form-control", type = "number" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.PricePerHour, "Hourly Rate", new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.PricePerHour, new { @class = "form-control", type = "number", step = "0.01" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Description, new { @class = "form-label fw-bold" })
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 3 })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Upload Image</label>
                    <input type="file" name="ImageFile" class="form-control" onchange="previewImage(this)" />
                    <img id="preview" class="image-preview" />
                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fa fa-check-circle me-1"></i> Save
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<script>
    function previewImage(input) {
        const preview = document.getElementById("preview");
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                preview.style.display = "block";
                preview.src = e.target.result;
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
