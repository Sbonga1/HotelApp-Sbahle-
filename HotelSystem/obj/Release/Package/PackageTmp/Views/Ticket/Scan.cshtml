@{
    ViewBag.Title = "Scan Ticket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>

<style>
    #qr-reader {
        width: 100%;
        max-width: 400px;
        margin: 0 auto;
        border: 2px dashed #6c757d;
        border-radius: 12px;
        padding: 10px;
    }

    .card-header h4 i {
        color: #ffc107;
    }

    .form-label {
        font-weight: 600;
    }
</style>

<div style="padding-top:5%"></div>

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fa fa-qrcode me-2"></i> Scan Ticket</h4>
        </div>

        <div class="card-body px-4 py-4">
            <div class="mb-4 text-center">
                <label class="form-label">📷 Scan QR Code with Camera</label>
                <div id="qr-reader" class="mx-auto"></div>
            </div>

            <hr class="my-4" />

            <div class="mb-3">
                <label class="form-label">🔤 Or Enter Ticket Code Manually</label>
                <input type="text" id="ticketCode" class="form-control" placeholder="e.g. ABCD1234" />
            </div>

            <div class="text-end">
                <button class="btn btn-primary" onclick="scanTicket()">
                    <i class="fa fa-search me-1"></i> Validate Manually
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    const eventId = @ViewBag.EventBookingId;

    function validateCode(code) {
        fetch('@Url.Action("ValidateTicketCode", "Ticket")', {
            method: "POST",
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ code: code, eventBookingId: eventId })
        })
        .then(res => res.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        title: "✅ Valid Ticket",
                        html: `<b>Email:</b> ${data.email}<br><b>Type:</b> ${data.type}<br><b>Event:</b> ${data.event_tittle}`,
                        icon: "success",
                        showCancelButton: false,
                        confirmButtonText: "Assign Table/Seat"
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // Redirect to Table Selection
                            window.location.href = `/TableAssignment/SelectTable?email=${encodeURIComponent(data.email)}&bookingId=${eventId}`;
                        }
                    });
                } else {
                    Swal.fire("❌ Invalid Ticket", data.message, "error");
                }
            })

        .catch(() => {
            Swal.fire("Error", "Something went wrong. Please try again.", "error");
        });
    }

    function scanTicket() {
        const code = document.getElementById("ticketCode").value.trim();
        if (!code) {
            Swal.fire("⚠️ Required", "Please enter a ticket code.", "warning");
            return;
        }
        validateCode(code);
    }

    // Auto-start camera QR scanner
    const html5QrCode = new Html5Qrcode("qr-reader");
    html5QrCode.start(
        { facingMode: "environment" },
        { fps: 10, qrbox: { width: 250, height: 250 } },
        (decodedText, decodedResult) => {
            html5QrCode.stop(); // Stop camera after first valid scan
            validateCode(decodedText);
        },
        errorMessage => {
            // Silently ignore scan errors
        }
    ).catch(err => {
        Swal.fire("📷 Camera Error", "Unable to access camera. Please check permissions or try a different browser.", "error");
    });
</script>
