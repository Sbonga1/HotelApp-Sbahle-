@model HotelSystem.Models.TicketType
@{
    ViewBag.Title = "Edit Ticket Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int maxGuests = ViewBag.MaxGuests ?? 0;
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fa fa-edit me-2"></i> Edit Ticket Type</h3>
        </div>

        <div class="card-body px-4 py-4">
            @using (Html.BeginForm("Edit", "Ticket", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.TicketTypeId)
                @Html.HiddenFor(m => m.EventBookingId) <!-- Keep event association -->

                <div class="mb-3">
                    <label class="form-label fw-bold">Ticket Type Name</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "e.g. VIP, Standard" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Price (ZAR)</label>
                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number", step = "0.01" })
                    @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Quantity <span class="text-muted">(Max: @maxGuests)</span></label>
                    @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control", type = "number", min = 1, max = maxGuests })
                    @Html.ValidationMessageFor(m => m.Quantity, "", new { @class = "text-danger" })
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Description</label>
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4 })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fa fa-save me-1"></i> Save Changes
                    </button>
                    <a href="@Url.Action("Details", "EventBooking", new { id = Model.EventBookingId })" class="btn btn-secondary ms-2">
                        <i class="fa fa-arrow-left me-1"></i> Cancel
                    </a>
                </div>
            }
        </div>
    </div>
</div>
