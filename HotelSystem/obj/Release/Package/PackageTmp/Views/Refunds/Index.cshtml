@model IEnumerable<HotelSystem.Models.Refund>

@{
    ViewBag.Title = "All Refund Requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="padding-top:5%">
    <h2 class="fw-bold text-center mb-4">All Refund Requests</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-danger">@TempData["Success"]</div>
    }

    <div class="row gy-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6">
                <div class="card shadow-sm rounded-4 p-3">
                    <div class="card-body">
                        <h5 class="card-title text-primary mb-3">Refund ID: @item.RefundId</h5>

                        <div class="row">
                            <div class="col-sm-6 mb-2">
                                <p><strong>Customer Email:</strong><br /> @item.emailaddress</p>
                                <p><strong>Reservation #:</strong><br /> @item.ReservationId</p>
                                <p><strong>Reservation Date:</strong><br /> @DateTime.Parse(item.ResevationDate).ToString("dd MMM yyyy")</p>
                            </div>
                            <div class="col-sm-6 mb-2">
                                <p><strong>Refund Date:</strong><br /> @DateTime.Parse(item.RefundDate).ToString("dd MMM yyyy")</p>
                                <p>
                                    <strong>Status:</strong><br />
                                    @if (item.RefundStatus == "Awaiting Approval")
                                    {
                                        <span class="badge bg-warning text-dark">Awaiting Approval</span>
                                    }
                                    else if (item.RefundStatus == "Declined")
                                    {
                                        <span class="badge bg-danger">Declined</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Approved</span>
                                    }
                                </p>
                                <p><strong>Reason:</strong><br /> @item.Reason</p>
                            </div>
                        </div>

                        <hr />

                        <div class="row">
                            <div class="col-sm-6 mb-2">
                                <p><strong>Amount Paid:</strong> R @item.reservationAmtPaid.ToString("F2")</p>
                                <p><strong>Deductions:</strong> R @item.RefundFee.ToString("F2")</p>
                                <p><strong>Refund Amount:</strong> R @item.tobePaid.ToString("F2")</p>
                            </div>

                            <div class="col-sm-6 text-end d-flex flex-column justify-content-end">
                                @if (item.RefundStatus == "Awaiting Approval")
                                {
                                    <a href="@Url.Action("Approve", "Refunds", new { id = item.RefundId })"
                                       class="btn btn-sm btn-success mb-2"
                                       onclick="return confirm('✅ Are you sure you want to approve this refund request?');">
                                        <i class="fa fa-check"></i> Approve
                                    </a>

                                    <a href="@Url.Action("DeclineView", "Refunds", new { id = item.RefundId })"
                                       class="btn btn-sm btn-danger mb-2"
                                       onclick="return confirm('❌ Are you sure you want to decline this refund request?');">
                                        <i class="fa fa-times"></i> Decline
                                    </a>
                                }
                                <a class="btn btn-outline-primary btn-sm" href="@Url.Content($"~/Refund_{item.RefundId}_{item.emailaddress}.pdf")">
                                    <i class="fa fa-download"></i> Receipt
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
