@model IEnumerable<HotelSystem.Models.Venue>
@{
    ViewBag.Title = "Manage Venues";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    .venue-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .venue-card:hover {
            transform: scale(1.01);
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.15);
        }

    .venue-image {
        max-height: 180px;
        object-fit: cover;
        border-radius: 0.75rem 0.75rem 0 0;
    }
</style>

<div style="padding-top:5%"></div>
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold"><i class="fa fa-building me-2"></i> Manage Venues</h2>
        <a href="@Url.Action("CreateVenue")" class="btn btn-success">
            <i class="fa fa-plus-circle me-1"></i> Add Venue
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            <i class="fa fa-exclamation-circle me-2"></i> No venues have been added yet.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var v in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card venue-card shadow-sm border-0 rounded-4">
                        @if (!string.IsNullOrEmpty(v.ImageUrl))
                        {
                            <img src="@Url.Content(v.ImageUrl)" alt="@v.Name" class="venue-image w-100" />
                        }

                        <div class="card-body">
                            <h5 class="card-title fw-bold">@v.Name</h5>
                            <p class="mb-1"><i class="fa fa-users me-1"></i> Capacity: <strong>@v.Capacity</strong></p>
                            <p class="mb-2"><i class="fa fa-clock me-1"></i> Hourly Rate: <strong>@v.BaseRatePerHour.ToString("R 0.00")</strong></p>

                            <div class="d-flex justify-content-between flex-wrap gap-1">
                                <a href="@Url.Action("EditVenue", new { id = v.VenueId })" class="btn btn-sm btn-outline-primary">
                                    <i class="fa fa-edit me-1"></i> Edit
                                </a>
                                <a href="@Url.Action("DeleteVenue", new { id = v.VenueId })" class="btn btn-sm btn-outline-danger">
                                    <i class="fa fa-trash me-1"></i> Delete
                                </a>
                                <a href="@Url.Action("Index", "EventTables", new { venueId = v.VenueId })" class="btn btn-sm btn-outline-dark">
                                    <i class="fa fa-chair me-1"></i> Manage Tables
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
